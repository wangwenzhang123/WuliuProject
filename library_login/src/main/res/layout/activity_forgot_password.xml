<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tongdada.library_login.ui.ForgotPasswordActivity">

    <RelativeLayout
        android:background="@color/_ffe06e38"
        android:id="@+id/top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/resetpassword_back"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/back" />

        <TextView
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toEndOf="@+id/resetpassword_back"
            android:layout_toRightOf="@+id/resetpassword_back"
            android:text="@string/back"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/reset_password"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"

        android:orientation="horizontal">

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_contact_phone"
            android:layout_width="@dimen/dp_290"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@null"
            android:gravity="right|center"
            android:hint="@string/input_phone"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="@string/phone"
            android:textColor="@color/_000000"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </View>
    <TextView
        android:id="@+id/retrieve_password"
        android:layout_gravity="center"
        android:textColor="@color/FFFFFF"
        android:gravity="center"
        android:text="@string/retrieve_password"
        android:background="@drawable/shape_login"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp_302"
        android:layout_height="@dimen/dp_42" />
</LinearLayout>
