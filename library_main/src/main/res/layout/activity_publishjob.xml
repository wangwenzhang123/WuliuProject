<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/issue_back_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffe06e38">

        <ImageView
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/white_back" />

        <TextView
            android:id="@+id/back_tv"
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@string/back"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/title"
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/publish_job"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/job_detail_tv"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/white"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_11"
            android:text="投递详情"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <View
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:background="@color/_ffe06e38"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16">

                </View>
                <TextView
                    android:textColor="@color/_333333"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/job_detail"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/job_name"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/job_name"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/_333333"
                    android:text="@string/salary_range"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:id="@+id/salary_range"
                    android:textColor="@color/_333333"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_gravity="center"
                    android:text="8K-20K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:src="@mipmap/go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/qualifications"
                android:textColor="@color/_333333"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/qualifications"
                android:text=""
                android:gravity="top|left"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:background="@drawable/shape_et_ed_8"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_15"
                android:minHeight="@dimen/dp_80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <View
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:background="@color/_ffe06e38"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_16">

                </View>
                <TextView
                    android:textColor="@color/_333333"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="@string/work_units"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/work_name"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText

                    android:textSize="@dimen/dp_14"
                    android:id="@+id/work_name"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/work_address"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/work_address"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/work_contact"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/work_contact"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/contact_phone"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/contact_phone"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:textColor="@color/_333333"
                    android:text="@string/job_end_time"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/job_end_time"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </View>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="@dimen/dp_16"
                    android:id="@+id/cancel_tv"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_login_hollow"
                    android:gravity="center"
                    android:text="取消招聘"
                    android:textColor="@color/_333333" />
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/release_job"
                    android:gravity="center"
                    android:textColor="@color/FFFFFF"
                    android:text="@string/release_job"
                    android:background="@drawable/shape_login"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_42" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>