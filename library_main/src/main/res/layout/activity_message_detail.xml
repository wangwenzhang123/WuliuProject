<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffe06e38">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/back_tv"
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toEndOf="@+id/register_back"
            android:layout_toRightOf="@+id/register_back"
            android:text="@string/back"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="资讯详情"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>
    <TextView
        android:id="@+id/message_title"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_18"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message_time"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/message_pic"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_172" />

    <TextView
        android:id="@+id/message_conten"
        android:textColor="@color/_333333"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>