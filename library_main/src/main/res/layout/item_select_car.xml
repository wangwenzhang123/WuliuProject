<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_select_car_bg_false"
    android:id="@+id/item_select_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/car_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@mipmap/select_car_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/car_no"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_7"
        android:textColor="@drawable/select_car_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/car_pic"
        android:text="苏A54526"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_11"
        android:id="@+id/car_loading"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_7"
        android:textColor="@drawable/select_car_text"
        app:layout_constraintTop_toBottomOf="@+id/car_no"
        app:layout_constraintLeft_toRightOf="@+id/car_pic"
        android:text="苏A54526"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>