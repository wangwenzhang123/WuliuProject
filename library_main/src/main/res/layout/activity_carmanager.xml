<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/_ffe06e38"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/white_back" />

        <TextView
            android:gravity="center"
            android:textColor="@color/FFFFFF"
            android:text="@string/car_manager"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/add_car_tv"
            android:layout_marginRight="@dimen/dp_18"
            android:gravity="center"
            android:textColor="@color/FFFFFF"
            android:text="@string/add_manager"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.tongdada.library_main.widget.SlideRecyclerView
        android:background="@color/_EDEDED"
        android:id="@+id/car_manager_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.tongdada.library_main.widget.SlideRecyclerView>
</LinearLayout>