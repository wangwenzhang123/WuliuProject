<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_gravity="center"
            android:src="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="@dimen/dp_12"
            android:id="@+id/select_search_tv"
            android:gravity="center|left"
            android:hint="请输入想要搜索的内容"
            android:paddingLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@mipmap/map_search"
            android:background="@drawable/shape_search"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_28" />
        <TextView
            android:id="@+id/search_tv"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/search"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="@string/historical_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.tongdada.library_main.widget.FlowLayout
        android:id="@+id/history_fll"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.tongdada.library_main.widget.FlowLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_recycle"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>