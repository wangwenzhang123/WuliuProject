<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffe06e38">

        <ImageView
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/white_back" />


        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:text="@string/back"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/add_driver_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/add_driver"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_gravity="center"
                    android:text="@string/update_driver_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/user_logo"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/default_logo"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_width="@dimen/dp_69"
                    android:layout_height="@dimen/dp_69" />
            </LinearLayout>
            <View
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/_E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="15dp">

            </View>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/user_name"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入姓名"
                    android:textSize="@dimen/sp_14" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"

                android:orientation="horizontal">

                <EditText
                    android:digits="1234567890"
                    android:inputType="phone|number"
                    android:id="@+id/et_driver_phone"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/phone"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"

                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_identity_card"
                    android:layout_width="@dimen/dp_290"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入身份证号"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/identity_card"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/driving_years"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />
                <EditText
                    android:digits="1234567890"
                    android:inputType="phone|number"
                    android:layout_weight="1"
                    android:id="@+id/et_driving_years"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入驾龄"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:textColor="@color/_000000"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="年"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/drivering_age"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />
                <EditText
                    android:digits="1234567890"
                    android:inputType="phone|number"
                    android:id="@+id/et_driver_age"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_6"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入年龄"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:textColor="@color/_000000"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="岁"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/driver_address"
                    android:textColor="@color/_000000"
                    android:textSize="@dimen/sp_14" />
                <EditText
                    android:id="@+id/driver_address"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right|center"
                    android:hint="请输入地址"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/_333333">

            </View>
            <TextView
                android:textColor="@color/_000000"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_documents" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_88">
                    <LinearLayout
                        android:id="@+id/ll_legal_positive"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_118"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_dotted_line">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_16"
                            android:id="@+id/iv_add"
                            android:layout_gravity="center"
                            android:src="@mipmap/registeradd"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26" />
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:text="身份证正面上传"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_legal_positive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />
                </FrameLayout>
                <FrameLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_88">
                    <LinearLayout
                        android:id="@+id/ll_legal_reverse"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_118"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_dotted_line">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:src="@mipmap/registeradd"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26" />
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:text="身份证反面上传"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_legal_reverse"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_88">
                    <LinearLayout
                        android:id="@+id/ll_driving_license"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_118"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_dotted_line">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:src="@mipmap/registeradd"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26" />
                        <TextView
                            android:scaleType="fitXY"
                            android:textSize="@dimen/sp_12"
                            android:text="驾照上传"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_driving_license"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </FrameLayout>

            </LinearLayout>
            <Button
                android:id="@+id/register_register_bt"
                android:layout_width="@dimen/dp_302"
                android:layout_height="@dimen/dp_42"
                android:layout_below="@+id/view4"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_42"
                android:background="@drawable/shape_login"
                android:text="@string/sure_add"
                android:textColor="@color/FFFFFF"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>