<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/_eaeaea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout

                android:background="@color/FFFFFF"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/ll_conten"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/message_title"
                        android:textColor="@color/_333333"
                        android:text="[消息] 订单编号弘扬搅拌站001号订单 "
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/message_state"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="已完成"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_14"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/message_time"
                        android:text="2019-05-18 9：00"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/message_detail"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text="查看详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16">

                </View>
            </LinearLayout>

            <ImageView
                android:layout_marginBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_24"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_24"
                android:paddingLeft="@dimen/dp_15"
                android:src="@mipmap/delete"
                android:id="@+id/item_slide"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ff565b"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp" />
</LinearLayout>