<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/information_pic"
        android:src="@mipmap/download"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp_99"
        android:layout_height="@dimen/dp_64" />
    <TextView
        android:id="@+id/information_conten"
        android:maxEms="15"
        android:gravity="left"
        android:text="可接收电视宽带数据卡角度思考角度看四季度开始时代就开始"
        android:layout_marginLeft="@dimen/dp_13"
        app:layout_constraintLeft_toRightOf="@id/information_pic"
        app:layout_constraintTop_toTopOf="@id/information_pic"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48" />
    <TextView
        android:layout_marginLeft="@dimen/dp_13"
        android:id="@+id/information_time"
        android:text="2019-05-18"
        app:layout_constraintLeft_toRightOf="@+id/information_pic"
        app:layout_constraintTop_toBottomOf="@id/information_conten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        app:layout_constraintTop_toBottomOf="@id/information_pic"
        android:layout_marginTop="@dimen/dp_14"

        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>
</android.support.constraint.ConstraintLayout>