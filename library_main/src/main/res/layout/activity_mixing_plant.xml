<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffe06e38">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/back_tv"
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toEndOf="@+id/register_back"
            android:layout_toRightOf="@+id/register_back"
            android:text="@string/back"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/mixing_plant_maintenance"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_gravity="center"
                android:text="@string/update_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/user_logo"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/default_logo"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_69" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/_E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="15dp">

        </View>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/unit_name"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_unit_name"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_unit"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_contact"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/contact"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_legal_person"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_legal_person"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/legal_person"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/et_contact_phone"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_contact_phone"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/contact_phone"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_address"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_address"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/address"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_registered_capital"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@null"
                android:gravity="right|center"
                android:hint="@string/input_registered_capital"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/registered_capital"
                android:textColor="@color/_000000"
                android:textSize="@dimen/sp_14" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/_333333">

        </View>

        <TextView
            android:textColor="@color/_000000"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_documents" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_168"
                android:layout_height="@dimen/dp_88">
                <LinearLayout
                    android:id="@+id/ll_legal_positive"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_118"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dotted_line">
                    <ImageView
                        android:layout_marginTop="@dimen/dp_16"
                        android:id="@+id/iv_add"
                        android:layout_gravity="center"
                        android:src="@mipmap/registeradd"
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26" />
                    <TextView
                        android:scaleType="fitXY"
                        android:textSize="@dimen/sp_12"
                        android:text="法人身份证正面上传"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_legal_positive"
                    android:layout_width="@dimen/dp_118"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_dotted_line"
                    android:scaleType="fitXY" />
            </FrameLayout>
            <FrameLayout
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="@dimen/dp_168"
                android:layout_height="@dimen/dp_88">
                <LinearLayout
                    android:id="@+id/ll_legal_reverse"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_118"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dotted_line">
                    <ImageView
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_gravity="center"
                        android:src="@mipmap/registeradd"
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26" />
                    <TextView
                        android:textSize="@dimen/sp_12"
                        android:text="法人身份证反面上传"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/iv_legal_reverse"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp_118"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dotted_line"
                    />


            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_168"
            android:layout_height="@dimen/dp_88">
            <LinearLayout
                android:id="@+id/ll_business_license"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_118"
                android:layout_height="match_parent"
                android:background="@drawable/shape_dotted_line">
                <ImageView
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:src="@mipmap/registeradd"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26" />
                <TextView
                    android:textSize="@dimen/sp_12"
                    android:text="营业执照上传"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_business_license"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_118"
                android:layout_height="match_parent"
                android:background="@drawable/shape_dotted_line"
                />
        </FrameLayout>
        <Button
            android:id="@+id/register_register_bt"
            android:layout_width="@dimen/dp_302"
            android:layout_height="@dimen/dp_42"
            android:layout_below="@+id/view4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_42"
            android:background="@drawable/shape_login"
            android:text="@string/sure_change"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

</LinearLayout>