<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffe06e38">

        <ImageView
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/white_back" />


        <TextView
            android:id="@+id/back_tv"
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_11"

            android:text="@string/back"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:textColor="@color/FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/about_app"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="@dimen/dp_38"
        android:layout_gravity="center"
        android:src="@mipmap/icon"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64" />
    <TextView
        android:id="@+id/versions"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/_ffe06e38"
        android:layout_gravity="center"
        android:text="版本 v 1.0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_14"
        android:text="       山水混凝土网创建于2018年，为山水科技控股旗下全新打造的网络品牌。网站主要包括混凝土、建材相关的行业资讯、商品行情（混凝土原材料、混凝土设备、混凝土二手设备、租赁等）、萝卜宝（工程服务平台）、人才专区、供求信息发布、行业企业推荐等内容，为混凝土、建材行业提供内容精准的信息服务，让企业和商家拥有开阔的视野和更为便捷的沟通平台。\n

     山水混凝土网，南京混凝土协会会员单位。山水混凝土网，打造混凝土、建材行业的交易和服务信息平台！"
        android:textColor="@color/_333333"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_marginTop="@dimen/dp_26"
        android:textColor="@color/_ffe06e38"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="电话：025-58769798"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/_ffe06e38"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="邮箱：tongdada@sina.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/_ffe06e38"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="网址：www.tongdada.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>