<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/finace_smart"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:background="@color/_EDEDED"
            android:id="@+id/finance_order_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <FrameLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_42"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:button="@null"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/selector_order_home"
            android:layout_gravity="center|left"
            android:id="@+id/check_all"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="全选"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/settlement_bt"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_42"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_login"
            android:text="@string/apply_settlement"
            android:textColor="@color/FFFFFF"
            android:textSize="@dimen/sp_14" />
    </FrameLayout>

</LinearLayout>