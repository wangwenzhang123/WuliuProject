<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:visibility="invisible"
        android:id="@+id/order_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1">

    </View>
    <ImageView
        android:id="@+id/order_state_iv"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@id/order_v"
        app:layout_constraintRight_toRightOf="@id/order_v"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/ongoing"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_20" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/order_v"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp_14"
        android:id="@+id/order_name"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="@id/order_v"
        android:text="我是搅拌站4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/order_v"
        android:textColor="@color/_DE3030"
        android:textSize="@dimen/sp_14"
        android:id="@+id/order_accept_number"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintLeft_toRightOf="@id/order_name"
        android:text="30人已接单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView

        android:scaleType="centerCrop"
        android:src="@drawable/border"
        android:id="@+id/order_iv"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_66" />
    <ImageView
        android:id="@+id/order_start_iv"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        app:layout_constraintLeft_toRightOf="@id/order_iv"
        android:src="@mipmap/start"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20" />
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp_14"
        android:id="@+id/order_start_tv"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@id/order_start_iv"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        app:layout_constraintLeft_toRightOf="@id/order_start_iv"
        android:text="南京市玄武区无是"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/order_end_iv"
        android:layout_marginLeft="@dimen/dp_6"
        app:layout_constraintLeft_toRightOf="@id/order_start_tv"
        app:layout_constraintTop_toTopOf="@id/order_start_tv"
        android:src="@mipmap/end"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20" />
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp_14"
        android:id="@+id/order_end_tv"
        android:layout_marginLeft="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@id/order_end_iv"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        app:layout_constraintLeft_toRightOf="@id/order_end_iv"
        android:text="南京市玄武区"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/_999999"
        android:textSize="@dimen/sp_12"
        android:id="@+id/order_cart"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintLeft_toLeftOf="@id/order_start_iv"
        app:layout_constraintTop_toBottomOf="@id/order_start_iv"
        android:text="砼车 | 共50方"

        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15" />
    <TextView

        android:textColor="@color/_999999"
        android:textSize="@dimen/sp_12"
        android:id="@+id/order_time"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintLeft_toLeftOf="@id/order_cart"
        app:layout_constraintTop_toBottomOf="@id/order_cart"
        android:text="砼车 | 共50方"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15" />
    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6">

    </View>
    <View
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@+id/order_time"
        android:layout_width="match_parent"
        android:background="@color/_EDEDED"
        android:layout_height="@dimen/dp_10">

    </View>
</android.support.constraint.ConstraintLayout>