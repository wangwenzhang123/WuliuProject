<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/order_v"
        android:background="@color/_eaeaea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_16">

    </View>
    <com.tongdada.library_main.widget.UserSlidingMenu
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_conten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_pic"
                    android:src="@mipmap/user_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_17"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65" />
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/user_name"
                    android:text="王神"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_22"
                    app:layout_constraintLeft_toRightOf="@id/user_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/user_position"
                    android:text="财务"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    app:layout_constraintLeft_toRightOf="@id/user_pic"
                    app:layout_constraintTop_toBottomOf="@id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/user_call"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/dp_29"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/call_phone"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30" />
            </android.support.constraint.ConstraintLayout>
            <ImageView
                android:paddingTop="@dimen/dp_24"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_24"
                android:paddingLeft="@dimen/dp_15"
                android:src="@mipmap/delete"
                android:layout_gravity="right"
                android:id="@+id/item_slide"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#ff565b"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </com.tongdada.library_main.widget.UserSlidingMenu>

</LinearLayout>