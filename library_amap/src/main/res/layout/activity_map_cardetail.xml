<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_gravity="center"
            android:src="@mipmap/black_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content" />

        <TextView

            android:text="@string/order_detail"
            android:id="@+id/search_et"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps.MapView
            android:id="@+id/order_detail_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>
        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="200dp"
            android:minHeight="@dimen/dp_50"
            android:background="@color/FFFFFF"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/license_plate_number"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/transport_carnumber"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/driver_name"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/driver_name"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/phone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/driver_phone"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/order_totel"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/accept_total"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/belongs_to"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/driver_attribution"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/current_load"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/now_loading"
                        android:text="1224511054"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/unit_price"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/unit_price"
                        android:text="100元（单位 方/公里）"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/total_price"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/_DE3030"
                        android:id="@+id/total_price"
                        android:text="100元（单位 方/公里）"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">
                    <TextView
                        android:text="@string/qiandao_time"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/qiandao"
                        android:text=""
                        android:gravity="right"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/_E0E0E0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </View>
                <TextView
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/loading_evidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_88">
                    <LinearLayout
                        android:id="@+id/ll_loading_pic"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_118"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_dotted_line">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_16"
                            android:id="@+id/iv_add1"
                            android:layout_gravity="center"
                            android:src="@mipmap/registeradd"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26" />
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:text="装货凭据"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/loading_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </FrameLayout>
                <TextView
                    android:id="@+id/unload_tv"
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/unloading_evidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <FrameLayout
                    android:id="@+id/unload_fl"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_22"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/dp_168"
                    android:layout_height="@dimen/dp_88">
                    <LinearLayout
                        android:id="@+id/ll_unload_pic"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/dp_118"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_dotted_line">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:src="@mipmap/registeradd"
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26" />
                        <TextView
                            android:textSize="@dimen/sp_12"
                            android:text="卸货凭据"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/unload_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/bottom_ll"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_33"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/cancel_tv"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_42"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_login_hollow"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/_ffe06e38" />
                    <TextView
                        android:id="@+id/unload_accomplish_tv"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_42"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_login"
                        android:gravity="center"
                        android:text="@string/load_accomplish"
                        android:textColor="@color/FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>